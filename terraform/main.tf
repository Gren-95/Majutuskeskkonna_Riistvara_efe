resource "proxmox_vm_qemu" "renee" {
  name                    = "renee"
  vmid                    = "100"
  target_node             = "l6vi"
  clone                   = "ubuntu-server"
  cores                   = 1
  sockets                 = 1
  cpu                     = "host"
  memory                  = 4096
  agent                   = 1
  full_clone              = true
  scsihw                  = "virtio-scsi-pci"
  bootdisk                = "scsi0"
  os_type                 = "cloud-init"
  cloudinit_cdrom_storage = "local-lvm"

  network {
    bridge = "vmbr0"
    model  = "virtio"
  }

  disks {
    scsi {
      scsi0 {
        disk {
          storage = "local-lvm"
          size    = 50
        }
      }
    }
  }

  ipconfig0 = "ip=192.168.111.71/24,gw=192.168.111.1"
  sshkeys   = <<EOF
  ssh-rsa  sysadmin@A326-15-2
  EOF

}

